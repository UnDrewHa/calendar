    .container
      .new-note.hidden
        .new-note__inner
          .new-note__close ✕
          h3 Новая заметка:
          form(id='noteForm')
            input(id='note-id' type='hidden')
            .new-note__group
              label(for='note-title') Название:
              input(id='note-title' type='text' placeholder='Заметка')
            .new-note__group
              label(for='date-y') Год:
              input(id='date-y' type='text' placeholder='2015')

            .new-note__group
              label(for='date-m') Месяц:
              select(id='date-m')
                option Месяц
                each val, index in ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь']
                  option(value=index)= val
            .new-note__group
              label(for='date-d') День:
              select(id='date-d')
                option День
                - for (var i=1; i<=30; i++) {
